#include <pcf8574.h>


void HAL_PCF8574_Init(I2C_HandleTypeDef * hi2c, uint8_t address)
{
	pcf8574_hi2c = hi2c;
	pcf8574_address = address;
}

void HAL_PCF8574_WritePin(uint8_t GPIO_Pin, GPIO_PinState PinState)
{
	static uint8_t PinState = 0;
	if(PinState){
		PinState &= GPIO_Pin;
	}
	else PinState |= GPIO_Pin;
	HAL_I2C_Master_Transmit(pcf8574_hi2c, pcf8574_address, PinState, 1, 1);
}
